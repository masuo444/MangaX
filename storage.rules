rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public assets (covers, pages). Allows reads by anyone, writes only when signed in.
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // User-specific uploads: only owner can read/write.
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
