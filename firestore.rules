rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthed() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthed() && request.auth.uid == userId;
    }

    // User profile: each user can read/write only自分のプロファイル
    match /artifacts/{appId}/users/{userId}/profile/{docId} {
      allow read, write: if isOwner(userId);
    }

    // Public data: read-only to everyone. Writes require sign-in with minimal ownership checks.
    match /artifacts/{appId}/public/data {
      // Series
      match /series/{seriesId} {
        allow read: if true;
        allow create: if isAuthed() && request.resource.data.createdBy == request.auth.uid;
        allow update: if isAuthed() && resource.data.createdBy == request.auth.uid;
        allow delete: if false;
      }

      // Chapters
      match /chapters/{chapterId} {
        allow read: if true;
        allow create, update: if isAuthed();
        allow delete: if false;
      }

      // Pages (image URLs only; binary should go to Storage)
      match /pages/{pageId} {
        allow read: if true;
        allow create, update: if isAuthed();
        allow delete: if false;
      }

      // Sponsor/requests
      match /requests/{requestId} {
        allow read: if true;
        allow create: if isAuthed() && request.resource.data.userId == request.auth.uid;
        allow update, delete: if false;
      }
    }
  }
}
